{{template "header" .}}
<div class="wl-container">
  <div class="wl-header">
    <a class="wl-header-back-button" href="{{.PreviousUrl}}"><img src="/img/ic_back.svg" alt="Zurück"></a>
    <h1>Suchen</h1>
  </div>
  {{if ne .ErrorMessage "" -}}
  <p class="alert alert-danger">{{.ErrorMessage}}</p>
  {{end -}}
  <form action="/search" method="POST">
    <div class="form-row">
      <div class="wl-search-form-checkbox-col col-2 col-sm-1 col-md-1 col-xl-1">
        <input type="checkbox" name="by-type" {{if .ByType}}checked{{end}}>
      </div>
      <div class="form-group col-10 col-sm-4 col-md-3 col-xl-3">
        <label for="type">Art:</label>
        <select class="form-control" name="type">
          {{range .EntryTypes -}}
          <option value="{{.Id}}" {{if eq .Id $.TypeId}}selected{{end}}>{{.Description}}</option>
          {{end -}}
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="wl-search-form-checkbox-col col-2 col-sm-1 col-md-1 col-xl-1">
        <input type="checkbox" name="by-date" {{if .ByDate}}checked{{end}}>
      </div>
      <div class="form-group col-5 col-sm-4 col-md-3 col-xl-3">
        <label for="start-date">Von:</label>
        <input class="form-control" name="start-date" type="date" value="{{.StartDate}}">
      </div>
      <div class="form-group col-5 col-sm-4 col-md-3 col-xl-3">
        <label for="end-date">Bis:</label>
        <input class="form-control" name="end-date" type="date" value="{{.EndDate}}">
      </div>
    </div>
    <div class="form-row">
      <div class="wl-search-form-checkbox-col col-2 col-sm-1 col-md-1 col-xl-1">
        <input type="checkbox" name="by-activity" {{if .ByActivity}}checked{{end}}>
      </div>
      <div class="form-group col-10 col-sm-4 col-md-3 col-xl-3">
        <label for="activity">Tätigkeit:</label>
        <select class="form-control" name="activity">
          {{range .EntryActivities -}}
          <option value="{{.Id}}" {{if eq .Id $.ActivityId}}selected{{end}}>{{.Description}}</option>
          {{end -}}
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="wl-search-form-checkbox-col col-2 col-sm-1 col-md-1 col-xl-1">
        <input type="checkbox" name="by-description" {{if .ByDescription}}checked{{end}}>
      </div>
      <div class="form-group col-10 col-sm-87 col-md-9 col-xl-9">
        <label for="description">Beschreibung:</label>
        <input class="form-control" name="description" type="text" value="{{.Description}}">
      </div>
    </div>
    <div class="wl-form-buttons">
      <a class="btn btn-light wl-form-button" href="{{.PreviousUrl}}">Abbrechen</a>
      <button class="btn btn-primary wl-form-button" type="submit">Suchen</button>
    </div>
  </form>
</div>
{{template "footer" .}}