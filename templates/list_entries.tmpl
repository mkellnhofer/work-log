{{template "header" .}}
<div class="wl-container">
  <div class="wl-header">
    <h1>Einträge</h1>
    <div class="wl-header-action-buttons">
      <a class="btn btn-primary wl-header-action-button" href="../create">Erstellen</a>
      <a class="btn btn-light wl-header-action-button" href="../search">Suchen</a>
      <a class="btn btn-light wl-header-action-button" href="../logout">Abmelden</a>
    </div>
  </div>
  {{if gt (len .Days) 0 -}}
  {{template "entries_list" .}}
  {{else -}}
  <p class="wl-list-no-entries-label">keine Einträge vorhanden</p>
  {{end -}}
  <div class="wl-list-page-buttons">
    {{if .HasPrevPage -}}
    <div class="wl-list-page-button-prev">
      <a class="btn btn-light" href="list?page={{.PrevPageNum}}">Vorherige</a>
    </div>
    {{end -}}
    {{if .HasNextPage -}}
    <div class="wl-list-page-button-next">
      <a class="btn btn-light" href="list?page={{.NextPageNum}}">Nächste</a>
    </div>
    {{end -}}
  </div>
</div>
<script>
  function approveDeletion() {
    return confirm("Wollen Sie den Eintrag wirklich löschen?");
  }
</script>
{{template "footer" .}}